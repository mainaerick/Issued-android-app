<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:layout_marginBottom="@dimen/page_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/page_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_title"
            android:fontFamily="@font/product_sans_bold"
            android:background="@color/gray"
            android:text=""
            />
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_subtitle"
            android:fontFamily="@font/product_sans_bold"
            android:background="@color/gray"
            android:layout_marginTop="9dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_subtitle"
            android:fontFamily="@font/product_sans_regular"
            android:background="@color/gray"
            android:layout_marginTop="9dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:layout_marginRight="7dp"

                android:textSize="@dimen/list_subtitle"
                android:fontFamily="@font/product_sans_bold"
                android:drawableLeft="@drawable/ic_baseline_circle_24"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:layout_marginRight="7dp"

                android:textSize="@dimen/list_subtitle"
                android:fontFamily="@font/product_sans_bold"
                app:drawableLeftCompat="@drawable/ic_baseline_circle_24" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_weight="0.5"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:textSize="@dimen/list_subtitle"
                android:fontFamily="@font/product_sans_bold"
                app:drawableLeftCompat="@drawable/ic_baseline_circle_24" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>