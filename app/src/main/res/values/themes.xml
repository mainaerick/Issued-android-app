<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Issiued" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <style name="style_title">
        <item name="android:textSize">@dimen/title_textsize</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="fontWeight">700</item>
    </style>
    <style name="style_subtitle">
        <item name="android:textSize">@dimen/subtitle_textsize</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="fontWeight">500</item>
    </style>
</resources>